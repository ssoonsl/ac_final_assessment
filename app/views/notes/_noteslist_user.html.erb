<div class="col-md-3">
  <h3>Users you're following</h3>

  <table>
    <tbody>
      <% @followees.each do |followee| %>
        <tr>
          <%= followee.email %>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>


<div class="col-md-9">
  <h3>Your Notes Feed </h3>

  <%= button_to 'Create note', new_note_path, method: :get, class: "btn btn-default" %>

  <table class="table table-striped table-bordered">
    <thead>
      <th>Likes</th>
      <th></th>
      <th>Note</th>
      <th>User</th>
    </thead>
      <tbody>
        <% @notes.order('created_at DESC').each do |note| %>
          <tr>
            <th><%= note.likes.count %></th>
            <% if note.user != current_user %>
              <% if current_user.likes?(note) %>
                <th><%= button_to 'Unlike', like_path(note), method: :delete %></th>
              <% else %>
                <th><%= button_to 'Like', likes_path(note), method: :post %></th>
              <% end %>
            <% else %>
              <th></th>
            <% end %>
            <td><%= note.body %></td>
            <td><%= note.user.email %></td>
            <% if note.user == current_user %>
              <td><%= button_to 'Edit', edit_note_path(note), method: :get %></td>
              <td><%= button_to 'Delete', note_path(note), method: :destroy %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
