<!DOCTYPE html>
<html>
  <head>
    <title>MyAcFinalAssessment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav">
      <li>Home</li>
      <% if user_signed_in? %>
        <li>Logged in as <%= current_user.email %></li>
        <li><%= link_to 'Edit profile', edit_user_registration_path, class: "navbar-link" %></li>
        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "navbar-link" %></li>
      <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path, class: "navbar-link" %></li>
        <li><%= link_to 'Log In', new_user_session_path, class: "navbar-link" %></li>
      <% end %>
    </ul>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>
